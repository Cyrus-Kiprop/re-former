<div class="index-container">
  <h1>List of recovering patients from COVID 19</h1>
  <ul class='list-users'>
    <% @users.each do |user| %>
      <li>
        <span class="checkmark-logo">
          <img src="../../assets/images/icons8-checkmark-48.png" alt="">
        </span>
        <%= link_to user.username, user_path(user)%>
        <%= button_to "Delete", user_path(user.id), method: :delete %>
        <%= button_to "Edit", edit_user_path(user.id), method: :get%>
      </li>
    <% end %>
  </ul>
  <%= button_to "Add new User!", new_user_path, method: :get%>
</div>
